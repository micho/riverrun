- title "Works"

%table
  %tr
    %th Name
  - for work in @works
    %tr
      %td
        = link_to work.name, work
      %td.contents
        = work.user.username
      %td.contents
        - if work.can_edit? current_user
          = "#{work.pieces.count} pieces"
        - else
          Collaborate with this work
      %td.actions
        - if work.can_edit? current_user
          = link_to "Edit", edit_work_path(work)
        - if work.can_delete? current_user
          = link_to "Destroy", work, :confirm => 'Are you sure?', :method => :delete

- if Work.can_create?(current_user)
  %p= link_to "New Work", new_work_path
